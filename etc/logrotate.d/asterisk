/opt/telekinesis/var/log/asterisk/*.log /opt/telekinesis/var/log/asterisk/queue_log /opt/telekinesis/var/log/asterisk/mmlog {
	weekly
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 640 root root
	sharedscripts
	postrotate
		/opt/telekinesis/sbin/asterisk -rx 'logger reload' > /dev/null 2> /dev/null
	endscript
}
